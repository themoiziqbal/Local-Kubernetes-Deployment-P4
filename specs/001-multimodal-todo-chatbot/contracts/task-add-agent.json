{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Task Add Agent Tool Schema",
  "description": "MCP tool schema for Task Add Agent - creates new tasks",
  "tool_name": "add_task",
  "input_schema": {
    "type": "object",
    "properties": {
      "description": {
        "type": "string",
        "minLength": 1,
        "maxLength": 500,
        "description": "Task description (required)"
      },
      "due_date": {
        "type": ["string", "null"],
        "format": "date-time",
        "description": "Optional deadline in ISO 8601 format"
      },
      "priority": {
        "type": ["string", "null"],
        "enum": ["low", "medium", "high", null],
        "description": "Optional priority level"
      },
      "tags": {
        "type": "array",
        "items": {"type": "string"},
        "default": [],
        "description": "Optional list of tags"
      }
    },
    "required": ["description"]
  },
  "output_schema": {
    "type": "object",
    "properties": {
      "success": {
        "type": "boolean",
        "description": "Whether task was created successfully"
      },
      "task": {
        "type": ["object", "null"],
        "description": "Created task object (null if failed)",
        "properties": {
          "id": {"type": "integer"},
          "description": {"type": "string"},
          "due_date": {"type": ["string", "null"]},
          "priority": {"type": ["string", "null"]},
          "status": {"type": "string", "default": "pending"},
          "tags": {"type": "array", "items": {"type": "string"}},
          "created_at": {"type": "string"},
          "updated_at": {"type": "string"}
        }
      },
      "error": {
        "type": ["string", "null"],
        "description": "Error message if success=false"
      },
      "user_message": {
        "type": "string",
        "description": "Friendly confirmation message to display to user"
      }
    },
    "required": ["success", "user_message"]
  },
  "examples": [
    {
      "input": {
        "description": "Buy groceries",
        "due_date": "2025-12-15T18:00:00",
        "priority": "medium",
        "tags": ["shopping", "weekly"]
      },
      "output": {
        "success": true,
        "task": {
          "id": 42,
          "description": "Buy groceries",
          "due_date": "2025-12-15T18:00:00",
          "priority": "medium",
          "status": "pending",
          "tags": ["shopping", "weekly"],
          "created_at": "2025-12-13T10:30:00",
          "updated_at": "2025-12-13T10:30:00"
        },
        "error": null,
        "user_message": "Task added: Buy groceries (due December 15 at 6:00 PM, priority: medium)"
      }
    },
    {
      "input": {
        "description": "",
        "tags": []
      },
      "output": {
        "success": false,
        "task": null,
        "error": "Description cannot be empty",
        "user_message": "I couldn't add the task. What task would you like to add?"
      }
    }
  ]
}
